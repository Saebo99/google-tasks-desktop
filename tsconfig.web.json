{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/*"],
      "@common/*": ["src/common/*"]
    },
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "src/common/**/*.ts",
    "src/preload/index.d.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
}
